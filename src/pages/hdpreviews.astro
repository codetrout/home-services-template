---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="HD Previews - Expert Excavation Services" description="High-definition previews of our excavation work and equipment.">
	<Navigation />

	<main>
		<!-- Hero Section -->
		<section class="page-hero">
			<div class="container">
				<h1>HD Previews</h1>
				<p class="hero-subtitle">
					Coming soon.
				</p>
			</div>
		</section>

		<!-- Placeholder Section -->
		<section class="content-section">
			<div class="container">
				<div class="placeholder-content">
					<p>This section is under construction.</p>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.page-hero {
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
		color: white;
		padding: var(--spacing-xl) var(--spacing-md);
		text-align: center;
		min-height: 500px;
		display: flex;
		align-items: center;
	}

	.page-hero h1 {
		color: white;
		font-size: 3rem;
		margin-bottom: var(--spacing-sm);
	}

	.hero-subtitle {
		font-size: 1.25rem;
		color: rgba(255, 255, 255, 0.95);
		max-width: 700px;
		margin: 0 auto;
	}

	.content-section {
		padding: var(--spacing-xl) var(--spacing-md);
		min-height: 400px;
	}

	.placeholder-content {
		text-align: center;
		color: var(--color-text-light);
		font-size: 1.125rem;
	}

	@media (max-width: 768px) {
		.page-hero h1 {
			font-size: 2rem;
		}
	}
</style>

---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
	<div class="container footer-container">
		<div class="footer-grid">
			<div class="footer-col">
				<h3>Home Services</h3>
				<p>Professional services for your home and business needs.</p>
			</div>

			<div class="footer-col">
				<h4>Quick Links</h4>
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/services">Services</a></li>
					<li><a href="/gallery">Gallery</a></li>
					<li><a href="/about">About</a></li>
					<li><a href="/contact">Contact</a></li>
				</ul>
			</div>

			<div class="footer-col">
				<h4>Services</h4>
				<ul>
					<li><a href="/services">Cleaning</a></li>
					<li><a href="/services">Repairs</a></li>
					<li><a href="/services">Maintenance</a></li>
					<li><a href="/services">Inspection</a></li>
				</ul>
			</div>

			<div class="footer-col">
				<h4>Contact</h4>
				<ul>
					<li>Phone: (555) 123-4567</li>
					<li>Email: info@homeservices.com</li>
					<li>Address: 123 Main St, City, ST 12345</li>
				</ul>
			</div>
		</div>

		<div class="footer-bottom">
			<p>&copy; {currentYear} Home Services. All rights reserved.</p>
		</div>
	</div>
</footer>

<style>
	.footer {
		background: var(--color-text);
		color: var(--color-bg-light);
		padding: var(--spacing-xl) 0 var(--spacing-md);
		margin-top: var(--spacing-xl);
	}

	.footer-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: var(--spacing-lg);
		margin-bottom: var(--spacing-lg);
	}

	.footer-col h3 {
		color: var(--color-primary);
		margin-bottom: var(--spacing-sm);
	}

	.footer-col h4 {
		color: var(--color-bg);
		margin-bottom: var(--spacing-sm);
		font-size: 1.125rem;
	}

	.footer-col p,
	.footer-col ul {
		color: var(--color-secondary);
		line-height: 1.8;
	}

	.footer-col ul {
		list-style: none;
	}

	.footer-col ul li {
		margin-bottom: 0.5rem;
	}

	.footer-col a {
		color: var(--color-secondary);
		transition: color 0.3s ease;
	}

	.footer-col a:hover {
		color: var(--color-bg);
	}

	.footer-bottom {
		text-align: center;
		padding-top: var(--spacing-md);
		border-top: 1px solid var(--color-secondary);
		color: var(--color-secondary);
	}

	@media (max-width: 768px) {
		.footer-grid {
			grid-template-columns: 1fr;
			gap: var(--spacing-md);
		}
	}
</style>
